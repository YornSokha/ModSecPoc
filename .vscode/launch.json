{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug ModSecPoc",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/net8.0/ModSecPoc.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://localhost:5000"
            },
            "console": "integratedTerminal"
        }
    ]
}